<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/mainLayout" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1" android:gravity="bottom">
    <Button android:text="@string/refresh" android:layout_height="wrap_content" android:id="@+id/buttonRefresh" android:layout_width="match_parent" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"></Button>
    <ListView android:layout_width="match_parent" android:layout_above="@+id/buttonRefresh" android:layout_alignParentLeft="true" android:layout_height="match_parent" android:id="@+id/listViewShows"></ListView>
</RelativeLayout>
